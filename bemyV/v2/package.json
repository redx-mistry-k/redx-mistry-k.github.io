{
  "name": "valentine-app",
  "version": "1.0.0",
  "description": "A fun Valentine's Day web app with Cloudflare Workers and D1",
  "main": "worker.js",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "d1:create": "wrangler d1 create valentine_db",
    "d1:execute": "wrangler d1 execute valentine_db --file=./schema.sql",
    "d1:query": "wrangler d1 execute valentine_db --command"
  },
  "keywords": [
    "valentine",
    "cloudflare",
    "workers",
    "d1"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "wrangler": "^3.0.0"
  }
}
